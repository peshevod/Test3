<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.test3.ui.home.HomeFragment"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_newSettingsFragment"
            app:destination="@id/new_settings_fragment" />
        <action
            android:id="@+id/action_nav_home_to_login_fragment"
            app:destination="@id/login_fragment" />
        <action
            android:id="@+id/action_nav_home_to_TZFragment"
            app:destination="@id/TZFragment" />
        <action
            android:id="@+id/action_nav_home_to_TZFragment2"
            app:destination="@id/TZFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.example.test3.ui.gallery.GalleryFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_gallery" >
        <action
            android:id="@+id/action_nav_gallery_to_newSettingsFragment"
            app:destination="@id/new_settings_fragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.example.test3.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" >
        <action
            android:id="@+id/action_nav_slideshow_to_newSettingsFragment"
            app:destination="@id/new_settings_fragment" />
    </fragment>
    <fragment
        android:id="@+id/login_fragment"
        android:name="com.example.test3.ui.login.LoginFragment"
        android:label="Enter login and password"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_login_fragment_to_devicesFragment"
            app:destination="@id/devicesFragment" />
    </fragment>
    <fragment
        android:id="@+id/new_settings_fragment"
        android:name="com.example.test3.NewSettingsFragment"
        android:label="Server Settings">
        <action
            android:id="@+id/action_newSettingsFragment_to_nav_home"
            app:destination="@id/nav_home"
            app:popUpTo="@id/nav_home"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_newSettingsFragment_to_serverSelectFragment"
            app:destination="@id/server_select_fragment"
            app:popUpTo="@id/new_settings_fragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_newSettingsFragment_to_serverSettingsFragment"
            app:destination="@id/server_settings_fragment"
            app:popUpTo="@id/new_settings_fragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_new_settings_fragment_to_TZFragment"
            app:destination="@id/TZFragment"
            app:popUpTo="@id/nav_home"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/server_select_fragment"
        android:name="com.example.test3.ServerSelectFragment"
        android:label="Select Server">
        <action
            android:id="@+id/action_serverSelectFragment_to_newSettingsFragment"
            app:destination="@id/new_settings_fragment" />
    </fragment>
    <fragment
        android:id="@+id/server_settings_fragment"
        android:name="com.example.test3.ServerSettingsFragment"
        android:label="Server Settings">
        <action
            android:id="@+id/action_serverSettingsFragment_to_newSettingsFragment"
            app:destination="@id/new_settings_fragment" />
        <argument
            android:name="server_name"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/devicesFragment"
        android:name="com.example.test3.DevicesFragment"
        android:label="Devices"
        tools:layout="@layout/fragment_devices_list" />
    <fragment
        android:id="@+id/TZFragment"
        android:name="com.example.test3.TZFragment"
        android:label="Time Zone">
        <action
            android:id="@+id/action_TZFragment_to_nav_home"
            app:destination="@id/nav_home"
            app:popUpTo="@id/nav_home"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_TZFragment_to_new_settings_fragment"
            app:destination="@id/new_settings_fragment"
            app:popUpTo="@id/nav_home"
            app:popUpToInclusive="false" />
    </fragment>
</navigation>